---
pageable: true
per_page: 10
---

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div>
    <div class="posts">
      <% page_articles.each_with_index do |article, i| %>

          <section class="post">
              <header class="post-header">
                  <img width="48" height="48" alt="Eric Ferraiuolo&#x27;s avatar" class="post-avatar" src="images/reid-avatar.png">

                  <a href="<%= article.url %>">
                    <h2 class="post-title"><%= article.title %></h2>
                  </a>

                  <p class="post-meta">
                      By <a class="post-author" href="#">admin</a>
                      On <%= article.date.strftime("%F") %>
                      <!-- Under <a class="post-category post-category-js" href="#"></a> -->
                  </p>
              </header>

              <div class="post-description">
                  <p>
                      <%= article.summary %>
                      <%= link_to 'Read moreâ€¦', article %>
                  </p>
              </div>
          </section>
      <% end %>
    </div>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>